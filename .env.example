# ==============================================================================
# AI Content Platform - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# Required fields are marked with [REQUIRED]
# ==============================================================================

# ===================
# Core Settings
# ===================
APP_NAME=AI Content Platform
DEBUG=false
# IMPORTANT: Generate a secure secret key with: openssl rand -hex 32
# This is used for JWT tokens AND encrypting sensitive data in the database
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# ===================
# Database [REQUIRED]
# ===================
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_content_platform

# ===================
# Redis (for Celery background tasks)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# AI Services [REQUIRED for content generation]
# ===================
# Note: User API keys are encrypted at rest in the database
OPENAI_API_KEY=sk-...
REPLICATE_API_TOKEN=r8_...
ANTHROPIC_API_KEY=

# ===================
# Security Settings
# ===================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Admin setup token (optional but recommended)
# If set, this token is required when creating the first admin account
# Generate with: openssl rand -hex 16
ADMIN_SETUP_TOKEN=

# ===================
# Stripe Billing
# ===================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_CREATOR=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_AGENCY=price_...

# ===================
# Email (SMTP)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# ===================
# OAuth (Optional)
# ===================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===================
# Social Media APIs (Optional)
# Note: OAuth tokens are encrypted at rest in the database
# ===================
TWITTER_API_KEY=
TWITTER_API_SECRET=
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ===================
# Error Tracking (Optional)
# ===================
SENTRY_DSN=

# ===================
# File Storage (Optional)
# ===================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1
